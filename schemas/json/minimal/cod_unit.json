{
  "title": "Codicological Unit",
  "description": "A codicological unit represents a distinctly produced book (REVISE)",
  "type": "object",
  "properties": {
      "ark": {
          "description": "A unique Archival Resource Key (ARK) describing the manuscript object",
          "type": "string",
          "pattern": "^ark:/21198/z1.{6}"
      },
      "type": {
          "description": "The type of codicological unit, e.g. a part, layer, etc.",
          "enum": [
              "part",
              "uto",
              "rebind"
          ]
      },
      "idno": {
          "type": "array",
          "items": {
              "description": "An identifier, according to a given scheme",
              "type": "object",
              "properties": {
                  "type": {
                      "enum": [
                          "shelfmark",
                          "part_no",
                          "uto_mark"
                      ],
                      "$comment": "Use term 'shelfmark' for both real and digitally rebound manuscript objects"
                  },
                  "value": {
                      "type": "string",
                      "minLength": 1
                  }
              },
              "required": [
                  "type",
                  "value"
              ],
              "unevaluatedProperties": false
          },
          "minItems": 1,
          "unevaluatedItems": false
      }
  },
  "required": [
      "ark",
      "type",
      "idno"
  ]
}
