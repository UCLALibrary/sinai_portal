{
  "title": "Manuscript Object",
  "description": "A manuscript or codex, either real or a hypothetical reconstruction",
  "type": "object",
  "properties": {
    "id": {
      "description": "A unique identifer, supplied by the database",
      "type": "integer"
    },
    "ark": {
      "description": "A unique Archival Resource Key (ARK) describing the manuscript object",
      "type": "string",
      "pattern": "^ark:/21198/z1.{6}"
    },
    "type": {
      "description": "The type of manuscript object, whether real or hypothetical reconstructions",
      "enum": [
        "shelf",
        "rebind"
      ],
      "$comment": "Is this the same set as #/$defs/cod_unit_types and #/$defs/content_unit_types?"
    },
    "idno": {
      "type": "array",
      "items": {
        "description": "An identifier, according to a given scheme",
        "type": "object",
        "properties": {
          "type": {
            "enum": [
              "shelfmark",
              "part_no",
              "uto_mark"
            ],
            "$comment": "Use term 'shelfmark' for both real and digitally rebound manuscript objects"
          },
          "value": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "type",
          "value"
        ],
        "unevaluatedProperties": false
      },
      "minItems": 1,
      "unevaluatedItems": false
    },
    "summary": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "extent": {
      "description": "The extent, expressed in number of folios, which comprise the manuscript object",
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "weight": {
      "description": "A string expression of the manuscript object's weight",
      "type": "string",
      "minLength": 1
    },
    "dim": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "enum": [
              "ms_block",
              "folio",
              "av_folio",
              "writing_area",
              "margins"
            ]
          },
          "value": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "type",
          "value"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "state": {
      "description": "The current state of the manuscript object",
      "anyOf": [
        {
          "description": "The original form of the manuscript object",
          "enum": [
            "Bifolim",
            "Codex",
            "Folium",
            "Quire(s)",
            "Scroll",
            null
          ],
          "$comment": "This enum is reused and expanded in #/$defs/states"
        },
        {
          "enum": [
            "Undertext object"
          ]
        }
      ],
      "$comment": "State allows the same enumerated value list as #/$defs/forms with the addition of Undertext object"
    },
    "form": {
      "description": "The original form of the manuscript object",
      "enum": [
        "Bifolim",
        "Codex",
        "Folium",
        "Quire(s)",
        "Scroll",
        null
      ],
      "$comment": "This enum is reused and expanded in #/$defs/states"
    },
    "fol": {
      "description": "A string expressing the foliation of the object in a semi-controlled format",
      "type": [
        "string",
        "null"
      ],
      "minLength": 1,
      "$comment": "could require a pattern to capture the style of input we require. e.g. 'ff. 1-24 + flyleaves I-III'"
    },
    "coll": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "description": "A string expressing the collation of the object following a semi-controlled format, such as a collational formula",
        "type": [
          "string",
          "null"
        ],
        "minLength": 1,
        "$comment": "could require a pattern to conform these to a specific collational formula scheme"
      },
      "unevaluatedItems": false
    },
    "features": {
      "type": [
        "array",
        "null"
