{
  "title": "Place",
  "description": "A record for a place, including both physical spaces and mental/conceptual places that may not be locatable on a geospatial system",
  "type": "object",
  "properties": {
    "ark": {
      "description": "A unique Archival Resource Key (ARK)",
      "type": "string",
      "pattern": "^ark:/21198/([a-z]|[0-9])+"
    },
    "type": {
      "enum": [
        "building",
        "church",
        "composite",
        "designated-space",
        "diocese",
        "fortification",
        "island",
        "madrasa",
        "monastery",
        "mosque",
        "mountain",
        "natural feature",
        "open-water",
        "parish",
        "province",
        "quarter",
        "region",
        "river",
        "settlement",
        "state",
        "synagogue",
        "temple",
        "unknown"
      ],
      "$comment": "Place types from https://syriaca.org/documentation/place-types.html"
    },
    "pref_name": {
      "type": "string",
      "minLength": 1
    },
    "alt_name": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "minLength": 1
      },
      "unevaluatedItems": false
    },
    "desc": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "rel_con": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "description": "A related concept to a given entity provided by another authority file. May be connected via a skos:closeMatch property",
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "uri": {
            "type": "string",
            "format": "uri",
            "minLength": 1
          },
          "source": {
            "enum": [
              "HAF",
              "LoC",
              "Perseus",
              "Pinakes",
              "Pleiades",
              "Syriaca",
              "VIAF"
            ]
          }
        },
        "required": [
          "label",
          "uri",
          "source"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "bib": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "title": "Bibliography",
        "description": "A bibliographic citation connected with an object or entity",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "$comment": "Foreign key referring to the bibliographic item in the database"
          },
          "type": {
            "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "label"
            ],
            "unevaluatedProperties": false
          },
          "range": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "alt_shelf": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "url": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "note": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "title": "Note",
              "description": "A prose note of a specified type",
              "type": "object",
              "properties": {
                "type": {
                  "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "minLength": 1
                    },
                    "label": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "id",
                    "label"
                  ],
                  "unevaluatedProperties": false
                },
                "value": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "minLength": 1
                }
              },
              "required": [
                "type",
                "value"
              ],
              "unevaluatedProperties": false
            },
            "unevaluatedItems": false
          }
        },
        "required": [
          "id",
          "type"
        ],
        "if": {
          "properties": {
            "type": {
              "const": "otherdigversion"
            }
          },
          "required": [
            "type"
          ]
        },
        "then": {
          "properties": {
            "url": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "id",
            "type",
            "url"
          ]
        },
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "note": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "title": "Note",
        "description": "A prose note of a specified type",
        "type": "object",
        "properties": {
          "type": {
            "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "label"
            ],
            "unevaluatedProperties": false
          },
          "value": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          }
        },
        "required": [
          "type",
          "value"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "assoc_date": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "title": "Associated Date",
        "description": "A date associated with an object, either attested or inferred through indirect means (paleography, etc.)",
        "type": "object",
        "allOf": [
          {
            "type": "object",
            "properties": {
              "value": {
                "type": "string",
                "minLength": 1
              },
              "iso": {
                "type": "object",
                "properties": {
                  "not_before": {
                    "type": "string",
                    "format": "date",
                    "minLength": 3
                  },
                  "not_after": {
                    "type": [
                      "string",
                      "null"
                    ],
                    "format": "date",
                    "minLength": 3
                  }
                },
                "required": [
                  "not_before"
                ],
                "unevaluatedProperties": false
              }
            },
            "required": [
              "value",
              "iso"
            ]
          }
        ],
        "properties": {
          "type": {
            "enum": [
              "creation",
              "binding",
              "origin",
              "purchase",
              "birth",
              "death",
              "floruit",
              "unknown"
            ],
            "$comment": "TBD full list of types"
          },
          "as_written": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "note": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "title": "Note",
              "description": "A prose note of a specified type",
              "type": "object",
              "properties": {
                "type": {
                  "description": "A reference to a controlled term that is stored in a database table, referenced via ID but including a human-readable label",
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "minLength": 1
                    },
                    "label": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "id",
                    "label"
                  ],
                  "unevaluatedProperties": false
                },
                "value": {
                  "type": [
                    "string",
                    "null"
                  ],
                  "minLength": 1
                }
              },
              "required": [
                "type",
                "value"
              ],
              "unevaluatedProperties": false
            },
            "unevaluatedItems": false
          }
        },
        "required": [
          "type"
        ],
        "unevaluatedProperties": false
      },
      "unevaluatedItems": false
    },
    "assoc_name": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "title": "Associated Name",
        "description": "A person, group, or organization entity connected with an object via a given role",
        "type": "object",
        "properties": {
          "id": {
            "type": [
              "integer",
              "null"
            ]
          },
          "as_written": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          },
          "role": {
            "type": "string",
            "enum": [
              "author",
              "attributed-author",
              "creator",
              "binder",
              "owner",
              "unknown"
            ]
          },
          "note": {
            "type": [
              "array",
