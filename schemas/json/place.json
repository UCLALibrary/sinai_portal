        "array",
        "null"
      ],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "minLength": 1,
            "$comment": "possibly can set min-length based on ISO timestamp length?"
          },
          "comment": {
            "type": [
              "string",
              "null"
            ],
            "minLength": 1
          }
        },
        "required": [
