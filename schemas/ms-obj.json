                "type": "object",
                "properties": {
                    "type": {
                        "enum": [
                            "shelfmark"
                        ],
                        "$comment": "Use term 'shelfmark' for both real and digitally rebound manuscript objects"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "required": [
                    "type",
                    "value"
                ],
                "unevaluatedProperties": false
            },
            "minItems": 1,
